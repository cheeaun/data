html(lang='en')
  head
    meta(charset='utf-8')

    title We Build SG Data
    meta(name='description', content='Using data and graphs to inspire variety, openness and projects!')
    meta(name='keywords', content='Singapore, SG, open community, open source, software, hardware, programming, design, maker movement, free events, free tech events')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    link(rel='publisher', href='https://plus.google.com/+WebuildSg')
    meta(property='og:image', content='public/logo.png')
    meta(property='og:url', content='https://data.webuild.sg')
    meta(property='og:site_name', content='data.webuild.sg')
    meta(property='og:title', content='We Build SG Data')
    meta(property='og:description', content='Using data and graphs to inspire variety, openness and projects!')
    meta(property='og:type', content='website')

    link(rel='stylesheet', href='https://webuild.sg/public/css/style.css')
    link(rel='stylesheet', href='public/css/style.css')

    link(rel='apple-touch-icon', href='public/apple-touch-icon.png')
    link(rel='apple-touch-icon', sizes='72x72', href='public/apple-touch-icon-72x72-precomposed.png')
    link(rel='apple-touch-icon', sizes='114x114', href='public/apple-touch-icon-114x114-precomposed.png')
    link(rel='apple-touch-icon', sizes='144x144', href='public/apple-touch-icon-144x144-precomposed.png')
  body
    //if lt IE 9
      p.chromeframe Your browser is <em>ancient!</em> <a href='http://browsehappy.com/'>Upgrade to a cool new browser</a> to experience this site!
    div.wrapper
      header
        .container
          h1 we build!
          p(style="text-align:center") *work in progress*
          h2
            small Using data and graphs to inspire <strong>variety</strong>, <strong>openness</strong> and <strong>projects</strong> for the design and engineering community

      footer
        .container
          p All graphs are generated based on <br> <a href="https://github.com/webuildsg/data/tree/gh-pages/data/events/v1">open events data</a> and <a href="https://github.com/webuildsg/data/tree/gh-pages/data/repos/v1">open source repos data</a>

      .container
        h3 repositories updated per week
        <div id="repos-per-week" class="aGraph"></div>

        h3 events per week
        <div id="events-per-week" class="aGraph"></div>

        h3 repositories per month
        <div id="repos-per-month" class="aGraph"></div>

        h3 events per month
        <div id="events-per-month" class="aGraph"></div>

        h3 repositories by programming language
        <div id="repos-per-programming" class="aGraph"></div>

        h3 events per day of week
        <div id="events-per-day-of-week" class="aGraph"></div>

        h3 active user groups with at least 10 events
        <div id="events-per-group" class="aGraph"></div>

    script(src="https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.9/d3.min.js")
    script(src="public/js/eventsPerWeek.js")
    script(src="public/js/reposPerWeek.js")
    script(src="public/js/eventsPerMonth.js")
    script(src="public/js/reposPerMonth.js")
    script(src="public/js/eventsPerDayOfWeek.js")
    script(src="public/js/reposPerProgramming.js")
    script(src="public/js/eventsPerGroup.js")

